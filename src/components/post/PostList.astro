---
import type { CollectionEntry } from 'astro:content'
import PostCard from './PostCard.astro'

interface Props {
  posts: CollectionEntry<'posts'>[]
}

const { posts } = Astro.props
---

<div>
  <ul class="-my-4">
    {
      posts.map((post) => (
        <li>
          <PostCard entry={post} />
        </li>
      ))
    }
  </ul>
</div>
